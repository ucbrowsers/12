---
export interface Props {
  title: string;
  description?: string;
  image?: string;
}

const { title, description = "Discover amazing travel destinations, tips, and experiences from around the world. Your ultimate guide to budget travel and cultural exploration.", image = "/travel-logo.png" } = Astro.props;
const canonicalURL = new URL(Astro.url.pathname, "https://magis.world");
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- SEO Meta Tags -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="robots" content="index, follow" />
    <meta name="author" content="Magis Travel Blog" />
    
    <!-- Open Graph Meta Tags -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    
    <!-- Twitter Card Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={image} />
    
    <!-- AdSense Verification Code - Paste your verification code below this comment -->
    <!-- <meta name="google-adsense-account" content="ca-pub-XXXXXXXXXXXXXXXX"> -->
    
    <!-- AdSense Auto Ads Script - Replace with your AdSense code -->
    <!-- <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-XXXXXXXXXXXXXXXX" crossorigin="anonymous"></script> -->
    
    <link rel="canonical" href={canonicalURL} />
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  html {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
    line-height: 1.6;
    color: #333;
  }

  body {
    background-color: #f8f9fa;
  }

  a {
    text-decoration: none;
    color: #2563eb;
  }

  a:hover {
    text-decoration: underline;
  }

  img {
    max-width: 100%;
    height: auto;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .btn {
    display: inline-block;
    padding: 12px 24px;
    background-color: #2563eb;
    color: white;
    text-decoration: none;
    border-radius: 6px;
    font-weight: 500;
    transition: background-color 0.3s;
  }

  .btn:hover {
    background-color: #1d4ed8;
    text-decoration: none;
    color: white;
  }

  /* Blog Card Styles */
  .blog-card {
    background: white;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.07);
    transition: transform 0.3s, box-shadow 0.3s;
  }

  .blog-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
  }

  .card-image {
    position: relative;
    height: 200px;
    overflow: hidden;
  }

  .card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s;
  }

  .blog-card:hover .card-image img {
    transform: scale(1.05);
  }

  .category-badge {
    position: absolute;
    top: 12px;
    left: 12px;
    background: #2563eb;
    color: white;
    padding: 4px 12px;
    border-radius: 20px;
    font-size: 0.85rem;
    font-weight: 500;
  }

  .card-content {
    padding: 1.5rem;
  }

  .card-meta {
    display: flex;
    justify-content: space-between;
    margin-bottom: 1rem;
    font-size: 0.9rem;
    color: #6b7280;
  }

  .card-title {
    margin-bottom: 1rem;
    font-size: 1.25rem;
    line-height: 1.4;
  }

  .card-title a {
    color: #1f2937;
    text-decoration: none;
    transition: color 0.3s;
  }

  .card-title a:hover {
    color: #2563eb;
  }

  .card-excerpt {
    color: #6b7280;
    margin-bottom: 1.5rem;
    line-height: 1.6;
  }

  .read-more {
    color: #2563eb;
    font-weight: 500;
    text-decoration: none;
    transition: color 0.3s;
  }

  .read-more:hover {
    color: #1d4ed8;
  }
</style>