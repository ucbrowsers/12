<style>
  .terms-page {
    padding: 2rem 0;
    min-height: 70vh;
  }

  .page-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .page-header h1 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    color: #1f2937;
  }

  .last-updated {
    color: #6b7280;
    font-style: italic;
  }

  .content {
    max-width: 800px;
    margin: 0 auto;
    background: white;
    padding: 3rem;
    border-radius: 12px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.07);
  }

  section {
    margin-bottom: 2.5rem;
  }

  section:last-child {
    margin-bottom: 0;
  }

  h2 {
    font-size: 1.5rem;
    margin-bottom: 1rem;
    color: #1f2937;
    border-bottom: 2px solid #2563eb;
    padding-bottom: 0.5rem;
  }

  p {
    margin-bottom: 1rem;
    line-height: 1.7;
    color: #374151;
  }

  ul {
    margin-left: 1.5rem;
    margin-bottom: 1rem;
  }

  li {
    margin-bottom: 0.5rem;
    line-height: 1.6;
  }

  a {
    color: #2563eb;
    text-decoration: none;
  }

  a:hover {
    text-decoration: underline;
  }

  strong {
    color: #1f2937;
  }

  .contact-info {
    background: #f8f9fa;
    padding: 1.5rem;
    border-radius: 8px;
    margin-top: 1rem;
  }

  .contact-info p {
    margin-bottom: 0.5rem;
  }

  @media (max-width: 768px) {
    .page-header h1 {
      font-size: 2rem;
    }

    .content {
      padding: 2rem 1.5rem;
    }

    h2 {
      font-size: 1.3rem;
    }
  }
</style>