---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import BlogCard from '../components/BlogCard.astro';

const featuredPosts = [
  {
    title: "10 Hidden Gems in Southeast Asia You Must Visit",
    excerpt: "Discover breathtaking destinations off the beaten path in Southeast Asia. From secret beaches to ancient temples, these hidden gems will transform your travel experience.",
    image: "https://images.pexels.com/photos/1287460/pexels-photo-1287460.jpeg?auto=compress&cs=tinysrgb&w=800",
    slug: "hidden-gems-southeast-asia",
    category: "Destinations",
    date: "Jun 15, 2025",
    readTime: "8 min read"
  },
  {
    title: "Budget Backpacking Through Europe: Complete Guide",
    excerpt: "Learn how to explore Europe on a shoestring budget. Essential tips, accommodation hacks, and money-saving strategies for unforgettable European adventures.",
    image: "https://images.pexels.com/photos/1130626/pexels-photo-1130626.jpeg?auto=compress&cs=tinysrgb&w=800",
    slug: "budget-backpacking-europe",
    category: "Budget Travel",
    date: "Jun 12, 2025",
    readTime: "12 min read"
  },
  {
    title: "Street Food Adventures: Best Food Markets Worldwide",
    excerpt: "Embark on a culinary journey through the world's most vibrant street food markets. Taste authentic flavors and discover local food cultures.",
    image: "https://images.pexels.com/photos/1640777/pexels-photo-1640777.jpeg?auto=compress&cs=tinysrgb&w=800",
    slug: "street-food-markets-worldwide",
    category: "Food & Culture",
    date: "Jun 10, 2025",
    readTime: "10 min read"
  },
  {
    title: "Solo Female Travel: Safety Tips and Destinations",
    excerpt: "Empower your solo adventures with essential safety tips and the best destinations for female travelers. Build confidence and create unforgettable memories.",
    image: "https://images.pexels.com/photos/1371360/pexels-photo-1371360.jpeg?auto=compress&cs=tinysrgb&w=800",
    slug: "solo-female-travel-guide",
    category: "Travel Tips",
    date: "Jun 8, 2025",
    readTime: "9 min read"
  },
  {
    title: "Digital Nomad Paradise: Top 15 Cities for Remote Work",
    excerpt: "Discover the perfect blend of productivity and adventure. Explore cities that offer great WiFi, affordable living, and incredible experiences for digital nomads.",
    image: "https://images.pexels.com/photos/1051075/pexels-photo-1051075.jpeg?auto=compress&cs=tinysrgb&w=800",
    slug: "digital-nomad-cities",
    category: "Travel Tips",
    date: "Jun 5, 2025",
    readTime: "11 min read"
  },
  {
    title: "Sustainable Travel: How to Explore Responsibly",
    excerpt: "Make a positive impact while traveling. Learn practical tips for eco-friendly travel, supporting local communities, and preserving destinations for future generations.",
    image: "https://images.pexels.com/photos/1134166/pexels-photo-1134166.jpeg?auto=compress&cs=tinysrgb&w=800",
    slug: "sustainable-travel-guide",
    category: "Travel Tips",
    date: "Jun 3, 2025",
    readTime: "7 min read"
  }
];
---

<Layout title="Magis - Discover Amazing Travel Destinations & Tips">
  <Header />
  
  <main>
    <!-- Hero Section -->
    <section class="hero">
      <div class="hero-content">
        <h1>Discover the World, One Adventure at a Time</h1>
        <p>Your ultimate guide to amazing destinations, travel tips, and cultural experiences from around the globe. Start your journey today!</p>
        <a href="/blog" class="btn">Explore All Posts</a>
      </div>
      <div class="hero-image">
        <img src="https://images.pexels.com/photos/346885/pexels-photo-346885.jpeg?auto=compress&cs=tinysrgb&w=1200" alt="Beautiful travel destination" />
      </div>
    </section>

    <!-- Featured Posts -->
    <section class="featured-posts">
      <div class="container">
        <div class="section-header">
          <h2>Latest Travel Stories</h2>
          <p>Discover inspiring destinations, practical tips, and amazing experiences from fellow travelers</p>
        </div>
        
        <div class="posts-grid">
          {featuredPosts.map(post => (
            <BlogCard {...post} />
          ))}
        </div>
        
        <div class="view-all">
          <a href="/blog" class="btn">View All Posts</a>
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
</Layout>

<style>
  .hero {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    padding: 4rem 0;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
    align-items: center;
    max-width: 1200px;
    margin: 0 auto;
    padding-left: 20px;
    padding-right: 20px;
  }

  .hero-content h1 {
    font-size: 3rem;
    margin-bottom: 1rem;
    line-height: 1.2;
  }

  .hero-content p {
    font-size: 1.2rem;
    margin-bottom: 2rem;
    opacity: 0.9;
  }

  .hero-image img {
    border-radius: 12px;
    box-shadow: 0 10px 30px rgba(0,0,0,0.3);
  }

  .featured-posts {
    padding: 4rem 0;
  }

  .section-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .section-header h2 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    color: #1f2937;
  }

  .section-header p {
    font-size: 1.1rem;
    color: #6b7280;
  }

  .posts-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 2rem;
    margin-bottom: 3rem;
  }

  .view-all {
    text-align: center;
  }

  @media (max-width: 768px) {
    .hero {
      grid-template-columns: 1fr;
      text-align: center;
      padding: 2rem 20px;
    }

    .hero-content h1 {
      font-size: 2rem;
    }

    .posts-grid {
      grid-template-columns: 1fr;
    }

    .section-header h2 {
      font-size: 2rem;
    }
  }
</style>